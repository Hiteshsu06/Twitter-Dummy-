<div class="row">
<div class="col-4 border-right height-100vh">
<div><h4><%= @profile.first_name %> <%= @profile.second_name %></h4></div>
<div><%= @tweet_count %> Tweets</div>
<div><img src="<%= @profile.profile_image %>" 
alt="" width="445px" height="250px"></div>
<div><h5><%= @profile.first_name %> <%= @profile.second_name %></h5></div>
<div><%= @profile.username %></div>
 <%= link_to "Edit profile", edit_user_registration_path, class: "navbar-link" %>
<div>BIO</div>
<div><div><%= @profile.address %></div><div><%= @profile.date_of_birth %></div><div><%= @profile.created_at %></div></div>
<div><div>Following</div><div>Followers</div></div>
</div>
<div class="col-8 height-fixed">
  <div><h2>TWEETS</h2></div>
  <li> <%= link_to "Create Tweet", new_tweet_path%> </li>
  <% @tweets.each do |tweet| %>
        <div class="custom-tweet-class">
        <div>Harishgangani @harishgangani</div>
        <div><%= tweet.post %></div>
        <div><img src="<%= tweet.image %>" alt="" width="100%" height="350"></div>
        <div class="comment-parent">
                <% @comments.each do |data| %>
                <div class="comment-section">
                <%if data.tweet_id === tweet.id %>
                    <div>Username <%= data.username %></div>
                    <div>Comment <%= data.comment %></div>
                <%end%>
                </div>
                <% end %>
        </div>
         <%= link_to "Comments",  new_tweet_comment_path(:tweet_id => tweet.id), class: "navbar-link" %>
        </div>
  <% end %>
</div>
</div>